{
  "tasks": [
    {
      "label": "Debug - build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--config", "Debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Release - build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--config", "Release"],
      "group": "build"
    }
  ],
  "version": "2.0.0"
}
